<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="CadastroEventosApp.Views.CadastroEventoPage"
             xmlns:local="clr-namespace:CadastroEventosApp.ViewModels"
             Title="Cadastro de Evento">

    <ContentPage.BindingContext>
        <local:CadastroEventoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20">
            <Entry Placeholder="Nome do Evento"
                   Text="{Binding Nome}" />

            <DatePicker Date="{Binding DataInicio}" />

            <DatePicker Date="{Binding DataTermino}" />

            <Entry Placeholder="NÃºmero de Participantes"
                   Keyboard="Numeric"
                   Text="{Binding NumeroParticipantes}" />

            <Entry Placeholder="Local do Evento"
                   Text="{Binding Local}" />

            <Entry Placeholder="Custo por Participante"
                   Keyboard="Numeric"
                   Text="{Binding CustoPorParticipante}" />

            <Button Text="Cadastrar Evento"
                    Command="{Binding CadastrarEventoCommand}" />

        </StackLayout>
    </ScrollView>
</ContentPage>
